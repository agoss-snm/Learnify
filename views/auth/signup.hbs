<div class="sectionB">
  <div class="content">
  <div id="login-form">
    <div id="form">
      <h1>Register</h1>
      <form action="/signup" method="POST">

        <label> 
          <input type="email" name="email" placeholder="Your email" class="my-input" />
        </label>

        <label> 
          <input type="password" name="password" placeholder="Your password" class="my-input" />
        </label>

        <button type="submit">Sign Up</button>
        {{#if Message}}
        <p class="menssage">{{Message}}</p>
        {{/if}}

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>
</div>
